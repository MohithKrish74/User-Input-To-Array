package com.company;

import java.util.*;

public class Main
{
    public static void main(String[] args)
    {
        System.out.print("Enter the size of the array: ");
        Scanner in =new Scanner(System.in);
        int size=in.nextInt();
        int array[]=new int[size];
        for(int i=0;i<size;i++)
        {
            array[i]=in.nextInt();
        }
        System.out.println(Arrays.toString(array));
    }

}


